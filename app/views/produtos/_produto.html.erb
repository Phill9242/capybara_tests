<tr class="produto-<%= produto.nome %>">
    <td><%= produto.nome %></td>
    <td><%= produto.descricao %></td>
    <td><%= produto.departamento.nome %></td>
    <td><%= produto.preco %></td>
    <td><%= produto.quantidade %></td>
    <td>
        <%=  link_to "Alterar", edit_produto_path(produto), class:"btn btn-warning" %>
    </td>
    <td><%=  button_to "Remover", produto, method: :delete, 
        class:"btn btn-danger",
        data: {confirm:"Gostaria de remover o produto: #{produto.nome}?"} %>
    </td>
</tr>
